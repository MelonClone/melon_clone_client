<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/connect_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_device_network"
            android:scaleType="fitCenter"
            android:padding="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/connect_btn">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_aac"
                android:scaleType="fitCenter"
                android:padding="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Guidance (feat. Drake)"
                    android:textSize="20sp"
                    android:textColor="@color/colorLightPoint"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chris Brown"
                    android:textSize="15sp"
                    android:textColor="@color/colorLight"
                    android:textAlignment="center"/>

            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/minimize_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_down_arrow"
            android:scaleType="fitCenter"
            android:padding="0dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>