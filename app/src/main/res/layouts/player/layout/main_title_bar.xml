<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="@color/colorDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/user_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_user_white"
            android:scaleType="fitCenter"
            android:padding="13dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/user_btn"
            android:layout_toStartOf="@+id/minimize_btn"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:src="@drawable/ic_aac_white"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    android:padding="3dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="No Guidance (feat. Drake)"
                    android:textSize="18sp"
                    android:textColor="@color/colorLightPoint"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Chris Brown"
                android:textSize="13sp"
                android:textColor="@color/colorLight"
                android:gravity="bottom|center_horizontal"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/minimize_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_down_arrow_white"
            android:scaleType="fitCenter"
            android:padding="13dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>