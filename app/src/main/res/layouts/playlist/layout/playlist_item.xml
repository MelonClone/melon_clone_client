<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorDarkBackground">

    <org.watermelon.framework.global.customview.SquareImageView
        android:id="@+id/album_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/album_img"
        android:layout_toStartOf="@+id/more_btn"
        android:layout_marginEnd="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바람이 불어오는 곳"
            android:textColor="@color/colorLight"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제이레빗(J Rabbit)"
            android:textColor="@color/colorDarkWhite"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/more_btn"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_more_darkwhite"
        android:scaleType="fitCenter"/>
</RelativeLayout>