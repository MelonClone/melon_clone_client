<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/colorLightBackground">

    <com.devgd.melonclone.global.customview.SquareImageView
        android:id="@+id/ranking_album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/raking_album_group"
        android:scaleType="centerCrop"
        tools:src="#FF0000"
        tools:background="#33FF33"/>

    <RelativeLayout
        android:id="@+id/raking_album_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ranking_album_img"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="#33FFFF">

        <TextView
            android:id="@+id/ranking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="14sp"
            android:textColor="@color/colorDark"
            tools:text="노래 제목" />

        <TextView
            android:id="@+id/ranking_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ranking_title"
            android:textSize="12sp"
            android:textColor="@color/colorDark"
            tools:text="아티스트 이름" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>