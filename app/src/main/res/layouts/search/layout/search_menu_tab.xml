<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appbar_height"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/tab_name_group"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_margin="4dp">
        <TextView
            android:id="@+id/tab_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="뮤직"
            android:textColor="@color/colorDarkPoint"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tab_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_circle_box_point"
            android:gravity="center"
            tools:text="50"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:visibility="gone"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/tab_selected_icon"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_box_fill_point"
        android:visibility="invisible"/>
</LinearLayout>