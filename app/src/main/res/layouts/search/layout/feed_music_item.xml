<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/feed_video_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="600dp"
        android:minHeight="400dp"
        android:maxHeight="600dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/feed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            tools:src="@drawable/sample_img2"
            android:visibility="visible"/>
        <TextureView
            android:id="@+id/feed_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/feed_play_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_button"
            android:background="@color/colorDarkBackgroundTrans"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <ImageButton
            android:id="@+id/speaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/feed_video"
            android:layout_alignStart="@+id/feed_video"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:src="@drawable/ic_speaker_white"
            android:background="@drawable/circle_box_fill_point_trans"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/feed_info_group"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/feed_video_group"
        android:background="@color/colorDarkWhite">

    </RelativeLayout>
</RelativeLayout>